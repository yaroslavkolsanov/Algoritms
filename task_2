A = [2, 1, 10, 6, 4, 100, 10]

#массив для запоминания результатов на случай очень большой длины a
dp = [-1 for i in range(len(A))]

def findmin(mas, i):
    #если уже выбрали допсу по последнему предмету, то возвращаем ее время подготовки + курсовую
    if i == len(mas)-2:
        return mas[i] + mas[i+1]
    #если уже выбрали экзамен по последнему предмету возвращаем его время подготовки + курсовую
    if i == len(mas)-3:
        return mas[i] + mas[i+2]
    #если уже посчитали ранее, то возвращаем
    if dp[i] != -1:
        return dp[i]
    #если у нас четный i, то мы выбрали экзамен. Во 2 предмете можно выбрать либо экзамен, либо допсу
    if i % 2 == 0:
        res = min(mas[i] + findmin(mas, i+2), mas[i] + findmin(mas, i+3))
    #если у нас нечетный i, то мы выбрали допсу. Во 2 предмете можно выбрать экзамен
    else:
        res = mas[i] + findmin(mas, i+1)
    dp[i] = res
    return dp[i]
    
print(min(findmin(A, 0), findmin(A, 1)))
